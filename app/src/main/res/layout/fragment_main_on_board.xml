<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.fragments.onboard.main.MainOnBoardFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pagerImage"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:lottie_fileName="anim.technology.json"
        android:layout_gravity="center|top"
        android:layout_marginTop="60dp"
        tools:src="@drawable/ic_launcher_background"
        app:lottie_url="REPLACE_JSON_URL"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/text_back"
        android:textSize="18sp"
        android:text="Пропустить"
        android:layout_margin="20dp"
        android:layout_gravity="end"
        android:textColor="#D88B02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18sp"/>

    <TextView
        android:id="@+id/pagerText"
        android:textSize="20sp"
        android:text="Очень удобный функционал"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_height="wrap_content"/>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="#D88B02"
        app:dotsCornerRadius="8dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        app:dotsSize="16dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.5"
        app:selectedDotColor="@color/teal_200"
        app:progressMode="true"
        />


</FrameLayout>